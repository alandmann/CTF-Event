/* Board Layout */
.board {
  display: flex;
  gap: 1rem;
  justify-content: center;
}

.category-column {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.category-title {
  text-align: center;
  font-weight: bold;
  margin-bottom: 0.5rem;
}

.tile {
  background: #222;
  color: #fff;
  padding: 1rem;
  border: 2px solid #555;
  cursor: pointer;
  text-align: center;
  transition: 0.2s;
}
.tile:hover {
  background: #444;
}
.tile-title {
  font-size: 0.9rem;
  margin-bottom: 0.3rem;
}
.tile-points {
  font-size: 1.2rem;
  font-weight: bold;
}

/* Shattered effect */
.shattered {
  background: repeating-linear-gradient(
    45deg,
    #222,
    #222 0px,
    #333 0px,
    #333 0px
  );
  position: relative;
  overflow: hidden;
}
.shattered::after {
  content: "";
  position: absolute;
  inset: 0;
  background: url("https://www.transparenttextures.com/patterns/cross-scratches.png");
  opacity: 0.3;
  pointer-events: none;
}

/* Modal */
.modal-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(3px);
  z-index: 1000;
}

.modal-content {
  background: #fff;
  color: #000;
  padding: 2rem;
  border-radius: 8px;
  max-width: 500px;
  width: 90%;
  position: relative;
}

.close-btn,
.download-btn {
  margin-top: 1rem;
  padding: 0.5rem 1rem;
  cursor: pointer;
  border: none;
  border-radius: 4px;
}

.close-btn {
  background: #c00;
  color: #fff;
}

.download-btn {
  background: #007bff;
  color: #fff;
  display: block;
}

.flag-submit {
  margin-top: 1rem;
  display: flex;
  gap: 0.5rem;
}
.flag-submit input {
  flex: 1;
  padding: 0.5rem;
}
.flag-submit button {
  padding: 0.5rem 1rem;
  background: #28a745;
  color: #fff;
  border: none;
  border-radius: 4px;
}

.feedback {
  margin-top: 0.5rem;
  font-weight: bold;
}

.jokers {
  margin: 1rem 0;
  display: flex;
  gap: 0.5rem;
}

.joker-btn {
  background: #ff9800;
  color: white;
  padding: 0.5rem;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}
.joker-btn:hover {
  background: #e68900;
}

.hint-box {
  margin: 1rem 0;
  padding: 0.5rem;
  background: #f3f3f3;
  border-left: 4px solid #ff9800;
}

