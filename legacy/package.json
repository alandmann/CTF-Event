{
  "name": "ctf-jeopardy",
  "version": "1.0.0",
  "description": "CTF Jeopardy with React frontend and Express backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "npm start --prefix client",
    "build": "npm run build --prefix client",
    "prod": "npm run build --silent && node server.js",
    "heroku-postbuild": "npm install --prefix client && npm run build --prefix client"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}

